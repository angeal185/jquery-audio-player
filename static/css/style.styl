body,
html
  width: 100%
  height: 100%
  overflow: hidden
  cursor: url(cur1054.cur),progress!important

body
  margin: 0
  padding: 0

p
  color: #fff
  font-size: .8em

.mention
  position: absolute
  bottom: 30px
  right: 25px

.credits
  position: absolute
  bottom: 10px
  right: 25px

a
  color: #2ecc71
  text-decoration: none
  -webkit-transition: all .3s ease
  transition: all .3s ease

a:hover
  color: #1abc9c

#mPlayer
  width: 100%
  font-family: Arial,sans-serif

#mPlayer .hide
  display: none!important

#mPlayer .clr
  clear: both

#mPlayer .streamCenter
  width: 100%
  margin: 0 auto

#mPlayer .streamCenter:hover>.playlist
  bottom: 58px

#mPlayer.veryThin .streamCenter:hover>.playlist
  bottom: 33px

#mPlayer .musicPlayer
  padding: 0
  margin: 0
  position: fixed
  bottom: -65px
  left: 0
  right: 0
  background-color: #272727
  color: #FFF
  z-index: 2
  opacity: .8

#mPlayer .musicPlayer.show
  bottom: 0
  transition: bottom .2s

#mPlayer .blPlayer
  overflow: hidden
  margin: 12px 3vw
  padding: 4px
  background-color: #000
  border-radius: 3px
  color: #FFF

#mPlayer.veryThin .blPlayer
  margin: 0

#mPlayer .button,
#mPlayer button
  height: 26px
  padding: 2px 10px
  background-color: transparent
  border: 0
  border-radius: 2px
  color: #FFF
  cursor: crosshair
  font-size: 11px
  outline: 0

#mPlayer .button::-moz-focus-inner,
#mPlayer button::-moz-focus-inner
  border: 0
  padding: 0

#mPlayer .playControls
  float: left
  margin: 1px 0 0 1px
  overflow: hidden

#mPlayer .playControls button
  height: 24px
  width: 24px
  vertical-align: middle
  padding: 0
  margin-right: 3px
  border: 0
  background-color: #373737
  transition: none

#mPlayer .playControls i
  display: inline-block
  width: 24px
  height: 24px
  background-repeat: no-repeat

#mPlayer .playControls button i
  opacity: .8

#mPlayer .playControls button:hover i
  opacity: 1

#mPlayer .playControls button:active i
  position: relative
  top: 1px

#mPlayer .playControls .previous
  background-image: url(../img/prev.png)

#mPlayer .playControls .play
  background-image: url(../img/pause.png)
  opacity: .9

#mPlayer .playControls .pause
  background-image: url(../img/play.png)
  opacity: .9

#mPlayer .playControls .next
  background-image: url(../img/next.png)

#mPlayer .nowPlaying
  margin: 0 160px 0 95px

#mPlayer .nowPlaying time
  float: right
  margin-top: 0
  color: #DDD
  font-size: 9px
  min-width: 62px
  text-align: right

#mPlayer .nowPlaying h4
  margin: 4px 0 0
  padding: 4px 0
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  font-weight: 700
  color: #9B9B9B
  font-size: 11px

#mPlayer .nowPlaying h5
  overflow: hidden
  font-weight: 500
  font-size: 11px
  line-height: 13px
  margin: 0 0 3px
  height: 16px
  position: relative

#mPlayer .nowPlaying h5 .album,
#mPlayer .nowPlaying h5 .track
  position: absolute
  top: 16px
  width: 100%
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  animation: 1s ease 0s normal none 1 rotateOut
  -moz-animation: 1s ease 0s normal none 1 rotateOut
  -webkit-animation: 1s ease 0s normal none 1 rotateOut
  opacity: 0

#mPlayer .nowPlaying h5.album .album,
#mPlayer .nowPlaying h5.track .track
  top: 0
  animation: 1s ease 0s normal none 1 rotateIn
  -moz-animation: 1s ease 0s normal none 1 rotateIn
  -webkit-animation: 1s ease 0s normal none 1 rotateIn
  opacity: 1

#mPlayer .nowPlaying h5 .album a,
#mPlayer .nowPlaying h5 .title a
  color: #fff
  cursor: crosshair
  text-decoration: none
  font-weight: 700

#mPlayer .nowPlaying h5 a
  color: #aaa
  cursor: crosshair
  text-decoration: none

#mPlayer .nowPlaying h5 a:hover
  color: #4900de

#mPlayer .nowPlaying h5>div
  transition: opacity .25s
  transition: top .45s

#mPlayer .ruler
  position: relative
  height: 2px
  background-color: #161616
  border-bottom: 1px solid #292929
  cursor: crosshair

#mPlayer .ruler>.allbits
  height: 13px
  overflow: hidden
  white-space: nowrap
  position: relative
  top: -6px
  left: -1px

#mPlayer .ruler>.allbits>.bit
  z-index: 1
  height: 0
  background-color: #5d1dce
  width: 1px
  opacity: .7
  transition: all .2s ease-out
  cursor: auto
  float: left
  margin-left: 1px
  margin-bottom: 22px

#mPlayer .ruler>.allbits>.bit:nth-child(1)
  margin-left: 2px

#mPlayer .ruler>.allbits>.bit:hover,
#mPlayer .ruler>.allbits>.bit:hover +.bit,
#mPlayer .ruler>.allbits>.bit:hover +.bit+.bit,
#mPlayer .ruler>.allbits>.bit:hover +.bit+.bit+.bit,
#mPlayer .ruler>.allbits>.bit:hover +.bit+.bit+.bit+.bit
  opacity: 1

#mPlayer .ruler .ui-slider-range
  z-index: 3
  width: 0
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  background-color: #5d1dce
  box-shadow: 0 1px 2px #272727

#mPlayer .ruler .buffer
  z-index: 2
  height: 18px
  width: 0
  position: absolute
  top: -9px
  right: 0
  bottom: 0
  left: 0
  background-color: transparent

#mPlayer .ruler .ui-slider-handle
  position: absolute
  top: -3px
  left: -1px
  z-index: 5
  padding: 4px
  margin-left: -4px
  background-color: #D5D5D5
  border-radius: 8px
  box-shadow: 0 0 5px #000
  background-image: -moz-radial-gradient(#CCC,#999)
  background-image: -webkit-radial-gradient(#CCC,#999)
  background-image: radial-gradient(#CCC,#999)

#mPlayer .ui-slider-handle
  visibility: hidden

#mPlayer .nowPlaying:hover .ui-slider-handle,
#mPlayer .volumeControl:hover .ui-slider-handle
  visibility: visible

#mPlayer .modeControls,
#mPlayer .volumeControl
  float: right
  margin: 3px

#mPlayer .modeControls button,
#mPlayer .volumeControl button
  box-shadow: none
  border: 0
  cursor: crosshair
  vertical-align: top
  margin-left: 5px
  display: inline-block
  width: 20px
  height: 20px

#mPlayer .volumeControl button
  opacity: .8

#mPlayer .volumeControl .vol2
  background-image: url(../img/vol2.png)

#mPlayer .volumeControl .vol1
  background-image: url(../img/vol1.png)

#mPlayer .volumeControl .vol0
  background-image: url(../img/vol0.png)

#mPlayer .volumeControl .volmute
  background-image: url(../img/volmute.png)
  opacity: .5

#mPlayer .volumeControl .ruler
  height: 2px
  width: 60px
  display: inline-block
  position: relative
  top: -3px
  z-index: 3

#mPlayer .volumeControl>.ruler>.handle
  visibility: hidden

#mPlayer .volumeControl>.ruler:hover>.handle
  visibility: visible

#mPlayer .volumeControl .ui-slider-range
  z-index: 5
  width: 0
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  background-color: #5d1dce
  box-shadow: 0 1px 2px #272727

#mPlayer .modeControls .shuffle
  background-image: url(../img/shuff.png)

#mPlayer .modeControls .repeat
  background-image: url(../img/repeat.png)

#mPlayer .modeControls .openPlaylist
  display: none

#mPlayer .modeControls button
  opacity: .5

#mPlayer .modeControls button.active
  opacity: 1

#mPlayer .playlist
  z-index: 1
  position: fixed
  bottom: -95px
  left: 0
  right: 0
  background: rgba(0,0,0,.6)
  font-size: 11px
  color: #FFF
  transition: bottom .5s ease
  -ms-transition: bottom .5s ease
  -moz-transition: bottom .5s ease
  -webkit-transition: bottom .5s ease
  transition-delay: .1s

#mPlayer .playlist>div
  width: 100%
  position: relative
  z-index: 1

#mPlayer .playlist .horizontal
  vertical-align: top
  text-align: center
  white-space: nowrap
  overflow: hidden

#mPlayer .playlist .horizontal ul
  height: 70px
  display: inline-block
  white-space: nowrap
  vertical-align: top
  margin: 0
  padding: 8px 3vw 15px

#mPlayer .playlist .list li
  display: inline-block
  vertical-align: top
  position: relative
  width: 200px
  height: 60px
  padding: 4px
  border-radius: 3px
  cursor: crosshair
  text-align: center
  margin-right: 12px
  transition: background-color .4s

#mPlayer .playlist .list li.jq-playlist-current
  background: rgba(39,39,39,.75)

#mPlayer .playlist .list li img
  width: 60px
  height: 60px
  margin: 0 10px 4px 0
  float: left

#mPlayer .playlist .list li img.noCover
  background-image: url(../img/nocover.png)
  background-size: contain

#mPlayer .list li .info
  opacity: .9
  text-align: left

#mPlayer .list li .info h6
  font-size: 12px
  font-weight: 900
  margin: 8px 0

#mPlayer .list li .info h6 a:hover
  color: #4900de

#drawer .list li .info span,
#mPlayer .list li .info a
  overflow: hidden
  text-overflow: ellipsis
  display: block
  line-height: 12px
  color: inherit
  text-decoration: none
  padding: 0 3px

#mPlayer .list li .controls
  position: absolute
  top: 4px
  left: 4px
  right: 4px
  height: 60px
  width: 60px
  border: 3px solid transparent
  z-index: 2
  box-sizing: border-box
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box

#mPlayer .list li.jq-playlist-current .controls
  border: 3px solid #4800de

#mPlayer .list li.jq-playlist-current h6 a
  color: #4900de

#mPlayer .list li .playBtn
  position: absolute
  left: 15px
  bottom: 14px
  margin: 0
  display: none
  width: 25px
  height: 25px
  background-image: url(../img/playy.png)
  border: 0
  box-shadow: none
  background-color: rgba(0,0,0,.8)
  border-radius: 2px

#mPlayer .list li.playing .playBtn
  background-image: url(../img/pausee.png)

#mPlayer .list li .playBtn:hover
  background-color: #4900de

#mPlayer .list li:hover,
.list li.jq-playlist-current:hover
  background: rgba(39,39,39,.75)

#mPlayer .list li:hover .playBtn
  display: inline-block

#mPlayer .iScrollHorizontalScrollbar
  position: absolute
  z-index: 9999
  height: 7px
  left: 40px
  left: 3vw
  right: 40px
  right: 3vw
  bottom: 4px
  overflow: hidden
  transform: translateZ(0px)
  transition: 500ms
  -webkit-transition: 500ms
  opacity: 1!important

#mPlayer .iScrollIndicator
  border-radius: 3px
  height: 100%
  display: block
  background: rgba(0,0,0,.5)
  cursor: pointer

#mPlayer.sharpen .blPlayer,
#mPlayer.sharpen .button,
#mPlayer.sharpen .list li .playBtn,
#mPlayer.sharpen .playlist .list li,
#mPlayer.sharpen button
  border-radius: 0

#mPlayer .volHidden .volumeControl
  display: none

#mPlayer .volHidden .nowPlaying
  margin: 0 90px 0 95px

#mPlayer .volHidden .modeControls .openPlaylist
  display: inline-block

#mPlayer .modeControls .openPlaylist
  margin-left: 0
  padding: 0
  transition: opacity .4s

#mPlayer .modeControls .openPlaylist:hover
  opacity: .9

@media all and (max-width:640px)
  #mPlayer .volumeControl
    display: none

  #mPlayer .nowPlaying
    margin: 0 90px 0 95px

  #mPlayer .modeControls .openPlaylist
    display: inline-block

@media all and (max-width:480px)
  #mPlayer .blPlayer
    padding: 4px 4px 34px
    margin: 5px

  #mPlayer .nowPlaying
    margin: 3px 1px

  #mPlayer .playControls
    position: absolute
    top: 41px

  #mPlayer .modeControls
    position: absolute
    top: 41px
    right: 20px

  #mPlayer .streamCenter:hover>.playlist
    bottom: 75px

